{% extends 'layout.njk' %}

{% block aside %}
{% endblock aside %}

{% block main %}
    <div class="registerMain">
        <form action="/register" method="post">
            <legend>
                <h1>Cadastro de estabelecimento</h1>
            </legend>
            <fieldset>
                <h2>Dados do Estabelecimento</h2>
                <div class="field-group">
                    <div class="field">
                        <label for="">Nome do Estabelecimento:</label>
                        <input type="text">
                    </div>
                    <div class="field">
                        <label for="">Imagem do estabeleciento:</label>
                        <input type="url" name="img_url" placeholder="Https://">
                    </div>
                    <div class="field">
                        <label for="">Telefone:</label>
                        <input type="text">
                    </div>
                </div>

                <div class="field-group addres">

                    <h3>Endereço:
                    </h3>
                    <div class="field">
                        <label for="">Rua:
                        </label>
                        <input type="text" name="street" placeholder="Rua"><br>
                    </div>

                    <div class="field">
                        <label for="">N°: 
                        </label>
                        <input type="text" name="number" placeholder="N°"><br>
                    </div>

                    <div class="field">
                        <label for="">Cidade: </label>
                        <select name="city" id=""><br>
                            <option value="Queimadas">Queimadas</option>
                        </select>
                    </div>

                </div>

                <div class="field-group">
                    <div class="field">
                        <label for="">Tipo de estabelecimento:</label>
                        <select name="" id="">
                            <option value="">Selecione uma categoria</option>
                            {% for category in categories %}
                                <option value="{{category.id}}">{{category.name}}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
            </fieldset>

            <button class="button" type="submit">Cadastrar</button>
        </form>

    </div>

{% endblock main %}