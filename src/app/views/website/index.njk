{% endblock aside %}

{% block main %}
    <div class="indexMain">
        
        <div class="content">
            <div class="cards">
                {% for establishment in establishments %}
                    <div class="card">
                        <div class="img">
                            <img src="{{establishment.image_url}}" alt="{{establishment.image_url}}">
                        </div>
                        <div class="infos">
                            <h2>{{establishment.name}}</h2>
                            <p>{{category.name}}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock main %}