        <div class="categories">
            <div class="categorie">
                <p>Pizzaria</p>
                <span hidden="true">
                    <img src="assets/pizza.svg" alt="pizzaria">
                </span>
            </div>
            <div class="categorie">
                <p>Restaurante
                </p>
                <span hidden="true">
                    <img src="assets/restaurant.svg" alt="restaurante">
                </span>
            </div>
            <div class="categorie">
                <p>Sorveteria / AÃ§aiteria</p>
